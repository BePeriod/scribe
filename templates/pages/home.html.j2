{% extends "layout/base.html.j2" %}

{% block title %}
  Home Page
{% endblock title %}
{% block content %}
  <div class="max-w-3xl py-8 flex flex-col items-center h-full">
    <h1 class="pb-8 text-center text-2xl font-semibold sm:pb-16 ">
      Record your message
    </h1>
    <div class="grow flex flex-1 items-center" data-controller="recorder">
      <button
        type="button"
        disabled
        data-recorder-target="btn"
        data-action="recorder#toggle"
        class="bg-emerald-500 p-4 rounded-full text-white shadow-lg drop-shadow-md disabled:bg-gray-300 disabled:text-gray-400">
        <svg
          data-recorder-target="disabledIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-12 h-12"
        >
          <path
            d="M 0 0 L 100 100"
            stroke-width="2"
            stroke-linecap="round"
            fill="none"
          />
          <path
            data-recorder-target="micIcon"
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
        </svg>
        <svg
          data-recorder-target="playIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-12 h-12 hidden"
        >
          <path
            data-recorder-target="micIcon"
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 0 1-3-3V4.5a3 3 0 1 1 6 0v8.25a3 3 0 0 1-3 3Z" />
        </svg>
        <svg
          data-recorder-target="stopIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-12 h-12 hidden"
        >
          <path fill-rule="evenodd" d="M4.5 7.5a3 3 0 013-3h9a3 3 0 013 3v9a3 3 0 01-3 3h-9a3 3 0 01-3-3v-9z"
                clip-rule="evenodd" />
        </svg>
        <svg
          data-recorder-target="loadingIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="animate-spin w-12 h-12 hidden"
        >
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </button>
    </div>
  </div>
{% endblock content %}
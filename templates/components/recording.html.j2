<div
  id="content"
  class="max-w-3xl py-8 flex flex-col items-center h-full mx-auto "
  data-controller="recording"
  data-recording-url-value="/recordings/{{ recording.id }}"
>
  <h1 class="pb-8 text-center text-2xl font-semibold sm:pb-16 ">
    Processing audio...
  </h1>
  <div class="grow flex flex-1 items-center">
    <span
      class="bg-emerald-500 p-4 rounded-full text-white shadow-lg drop-shadow-md">
      <svg
        data-recorder-target="loadingIcon"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="animate-spin w-12 h-12"
      >
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </span>
  </div>
</div>
<div
  id="content"
  class="max-w-3xl p-8 h-full mx-auto"
  data-controller="transcription"
>
  <div class="hidden" data-transcription-target="loadingIcon">
    {% include "components/loading_overlay.html.j2" %}
  </div>
  <div
    id="text-editor"
    data-transcription-target="textEditor"
    class="h-full"
  >
    <form action="/publish" method="POST" enctype="multipart/form-data" class="flex flex-col h-full space-y-4">
      <label for="messageInput" class="sr-only">Message</label>
      <textarea
        data-transcription-target="messageInput"
        id="messageInput"
        name="messageInput"
        class="grow"
      >
          {{ recording.transcription }}
        </textarea>
      <input type="hidden" name="formatted_message" data-transcription-target="formattedMessage">

      <div class="text-sm flex space-x-2 items-start">
        <div>
          <label>
            <input
              data-transcription-target="imageInput"
              data-action="transcription#imagePreview"
              type="file"
              name="post_image"
              class="sr-only"
              accept="image/png, image/jpeg, image/gif" />

            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                 class="w-6 h-6 cursor-pointer">
              <title>Attach Image</title>
              <path fill-rule="evenodd"
                    d="M18.97 3.659a2.25 2.25 0 0 0-3.182 0l-10.94 10.94a3.75 3.75 0 1 0 5.304 5.303l7.693-7.693a.75.75 0 0 1 1.06 1.06l-7.693 7.693a5.25 5.25 0 1 1-7.424-7.424l10.939-10.94a3.75 3.75 0 1 1 5.303 5.304L9.097 18.835l-.008.008-.007.007-.002.002-.003.002A2.25 2.25 0 0 1 5.91 15.66l7.81-7.81a.75.75 0 0 1 1.061 1.06l-7.81 7.81a.75.75 0 0 0 1.054 1.068L18.97 6.84a2.25 2.25 0 0 0 0-3.182Z"
                    clip-rule="evenodd" />
            </svg>
          </label>

        </div>
        <div class="relative flex items-start">
          <div class="flex h-6 items-center">
            <input id="pin_to_channel" name="pin_to_channel" type="checkbox"
                   checked
                   class="h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-600">
          </div>
          <div class="ml-2 text-sm leading-6">
            <label for="pin_to_channel" class="font-medium text-gray-900">Pin</label>
          </div>
        </div>

        <div class="relative flex items-start grow">
          <div class="flex h-6 items-center">
            <input id="notify_channel" name="notify_channel" type="checkbox"
                   checked
                   class="h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-600">
          </div>
          <div class="ml-2 text-sm leading-6">
            <label for="notify_channel" class="font-medium text-gray-900">Notify</label>
          </div>
        </div>
        <a href="/"
           class="rounded-md bg-gray-50 px-3.5 py-2.5 text-sm font-semibold text-gray-600 shadow-sm hover:bg-gray-100"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
               stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>

        </a>
        <button
          data-action="transcription#publish"
          type="button"
          class="rounded-md bg-emerald-50 px-3.5 py-2.5 text-sm font-semibold text-emerald-600 shadow-sm hover:bg-emerald-100"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
               stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
          </svg>

        </button>
      </div>
    </form>
  </div>
</div>
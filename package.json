{
  "name": "scribe",
  "version": "0.1.0",
  "description": "A Slack app for transcription and translation",
  "keywords": [],
  "author": "Shane Scanlon",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "lint": "eslint frontend/src/",
    "format": "prettier ./frontend --check",
    "watch:ts": "rollup -c --watch",
    "sync": "browser-sync start --proxy 'http://127.0.0.1:8000' --files 'templates' --files 'static'",
    "dev": "concurrently --names \"TS,SYNC\" -c \"bgBlue.bold,bgMagenta.bold\"  \"pnpm run watch:ts\" \"pnpm run sync\"",
    "check-types": "tsc --noEmit",
    "build": "rollup -c"
  },
  "packageManager": "pnpm@8.12.0",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tailwindcss/forms": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/style-guide": "^5.1.0",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^1.11.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "rollup": "^4.9.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.3.6",
    "tinymce": "^6.8.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "8.0.0-beta.2"
  }
}
